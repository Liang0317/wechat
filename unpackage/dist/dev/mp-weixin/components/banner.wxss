.swiper-box {
  position: relative;
}
.swiper-box .img-box {
  width: 100%;
  height: 100%;
}
.swiper-box .img-box .swiper-ad__img {
  width: 100%;
  height: 100%;
  background: #fff;
}
.swiper-box .img-box .play-video-info {
  top: 0rpx;
  width: 100%;
  height: 100%;
  z-index: 9;
}
.swiper-box .img-box .play-video-info .play-video {
  width: 66rpx;
  height: 66rpx;
  background: rgba(2, 2, 2, 0.5);
}
.swiper-box .img-box .play-video-info .play-video .iconfont {
  font-size: 28rpx;
}
.swiper-box .img-box .video-box {
  width: 100%;
  height: 100%;
}
.swiper-box .img-box .video-box .my-video {
  width: 100%;
  height: 100%;
}
.swiper-box .dots {
  position: absolute;
  z-index: 20rpx;
  text-align: right;
  width: 100%;
  padding: 0 20rpx;
}
.swiper-box .dots .dot {
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  background-color: #FEFFFE;
  border-radius: 6rpx;
  margin: 0 8rpx;
}
.swiper-box .numbers {
  position: absolute;
  z-index: 20rpx;
  text-align: right;
  width: 100%;
  -webkit-transform: translateY(-70rpx);
          transform: translateY(-70rpx);
  padding: 0 15rpx;
}
.swiper-box .numbers .number {
  display: inline-block;
  width: 66rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  border-radius: 33rpx;
  background: rgba(0, 0, 0, 0.4);
}

