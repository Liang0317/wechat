.item-input {
  width: 650rpx;
  height: 110rpx;
  background: #F7F8FA;
}
.item-textarea {
  width: 690rpx;
  height: 360rpx;
  background: #F7F8FA;
}
.item-textarea .textarea {
  width: 100%;
  height: 270rpx;
}
.tips-info {
  width: 690rpx;
  background: #FEF5F3;
}
.pay-item .item-icon {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35rpx;
}
.pay-item .item-icon .iconfont {
  font-size: 44rpx;
}
.pay-item .item-icon.wechat {
  background: #E7F9EE;
}
.pay-item .item-icon.wechat .iconfont {
  background-image: linear-gradient(180deg, #90EE90 0%, #32CD32 100%, #19c865 100%);
}
.pay-item .item-icon.alipay {
  background: #E9F5FE;
}
.pay-item .item-icon.alipay .iconfont {
  background-image: linear-gradient(180deg, #46BCFF 0%, #2587FF 100%, #1976FF 100%);
}
.pay-item .item-title {
  color: #2E3541;
}

