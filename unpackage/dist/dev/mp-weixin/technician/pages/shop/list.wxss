.shop .shop-top {
  padding-top: 10rpx;
}
.shop .shop-top .shop-top-bgcolor {
  height: 60rpx;
  top: 0;
  left: 0;
  width: 100%;
  z-index: -1;
}
.shop .shop-top .scroll-box {
  width: 100%;
  overflow-x: auto;
  white-space: nowrap;
}
.shop .shop-top .scroll-box .scroll-item {
  padding-right: 40rpx;
  position: relative;
  display: inline-block;
  vertical-align: top;
}
.shop .shop-top .shop-top-more {
  width: 112rpx;
  box-shadow: 0px 0px 5px #eee;
  height: 94rpx;
}
.shop .shop-search {
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  overflow: hidden;
  margin-bottom: -2rpx;
}
.shop .shop-search .shop-top-time {
  width: 70rpx;
  height: 70rpx;
}
.shop .shop-search .shop-top-time .shop-top-bg {
  width: 70rpx;
  height: 70rpx;
  border-radius: 70rpx;
  opacity: 0.1;
}
.shop .shop-nav {
  height: 94rpx;
  overflow: hidden;
}
.shop .shop-list {
  flex-flow: wrap;
}
.shop .shop-list .shop-item {
  width: calc(50% - 20rpx);
  height: 483rpx;
  overflow: hidden;
  margin-top: 25rpx;
}
.shop .shop-list .shop-item .shop-item-image {
  height: 350rpx;
  width: 100%;
}
.shop .shop-list .shop-item .shop-item-image image {
  width: 100%;
  height: 100%;
}
.shop .more-box .more-list {
  padding-top: 40rpx;
  max-height: 290rpx;
}
.shop .more-box .more-item {
  width: calc((100% - 40rpx) / 3);
  height: 78rpx;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  display: inline-block;
  vertical-align: top;
  text-align: center;
  line-height: 78rpx;
  overflow: hidden;
}
.shop .more-box .more-item .more-item-bg {
  width: 100%;
  height: 100%;
  opacity: 0.1;
}
.shop .more-box .more-item text {
  width: 100%;
}
.shop .more-box .more-footer {
  padding-top: 140rpx;
  padding-bottom: 40rpx;
}
.shop .more-box .more-footer .more-btn {
  width: 260rpx;
  height: 72rpx;
}
.shop .more-box .more-footer .more-btn-reset {
  background-color: #f2f2f2;
}

